! Fonts
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
!Xft.hinting: true
!Xft.hintstyle: hintslight

xterm*font: -*-terminus-medium-r-normal-*-12-*-*-*-c-*-*-1
XTerm*termName: xterm-256color
!-------------
! URxvt Config
!-------------

!URxvt.termName: xterm-256color
URxvt*termName: rxvt-unicode
URxvt.cursorBlink: true
URxvt.geometry: 85x25
URxvt.borderWidth: 0
URxvt.internalBorder: 3
URxvt.externalBorder: 3
URxvt.font: xft:Monospace:size=9, xft:DejaVu Sans Mono for Powerline:size=9
URxvt.boldFont: xft:Monospace:size=9, xft:DejaVu Sans Mono Bold for Powerline:size=9
URxvt.scrollBar: false
URxvt.perl-ext-common: default,matcher
URxvt.urlLauncher: chromium
!URxvt.colorUL: #e08175
URxvt.matcher.button: 1
URxvt.urgentOnBell: true

!URxvt.tabbed.tabbar-fg: 2
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 3
!URxvt.tabbed.tab-bg: 0

