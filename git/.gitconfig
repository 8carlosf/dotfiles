[user]
    email = 8carlosf@gmail.com
    name = carlosf
[merge]
    tool = meld
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[pager]
    difftool = true
[push]
	default = current
	autoSetupRemote = true
[core]
    editor = vim
[color]
    ui = true
[alias]
    st = status
    cm = commit -v
    acm = commit -av
    a = add
    ps = push
    psu = push -u
    pl = pull
    co = checkout
    br = branch
    d = difftool --tool=difftastic
    unstage = reset HEAD --
    last = log -1 HEAD
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[status]
    submodulesummary = true    
[github]
    user = 8carlosf
[init]
	templateDir = ~/.git-template
[pull]
	rebase = true
